<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= page_title(@page_title, "Scriptum") %></title>
  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <style>
    body { padding-top: 80px; }
  </style>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/admin">
        <%= @settings.site_name %>
      </a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="<%= current_page('/admin') %>">
            <a href="/admin">Dashboard</a>
          </li>
          <li class="<%= current_page('/admin/posts') %>">
            <a href="/admin/posts">Posts</a>
          </li>
          <li class="<%= current_page('/admin/users') %>">
            <a href="/admin/users">Users</a>
          </li>
          <% if current_user.role?(:admin) %>
            <li class="<%= current_page('/admin/settings') %>">
              <a href="/admin/settings">Settings</a>
            </li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-verticle"></li>
          <li>
            <a href="/user_sessions/logout">
              <i class="icon-off icon-white"></i>
              Sign out
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% flash.keys.each do |k| %>
    <div class="alert <%= "alert-#{k}" %>">
      <%= flash[k] %>
    </div>
  <% end %>

  <%= yield %>
</div>

<!-- Javascripts -->
<script src="/js/jquery-1.7.1.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
