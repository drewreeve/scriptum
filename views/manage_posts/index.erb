<h2>Manage Posts</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Slug</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td>
                    <a href="/admin/posts/<%= post.slug %>/edit">
                        <%= post.title %>
                    </a>
                </td>
                <td><%= post.slug %></td>
                <td><%= post.created_at %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= pagination(@posts) %>