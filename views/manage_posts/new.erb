<h2>New <%= params[:type].capitalize %></h2>

<div class="row">
    <form action="/admin/posts" method="post">
        <input type="hidden" name="type" value="<%= params[:type] %>" id="type">
        
        <div id="primary" class="span7">
            <label for="title">Title</label>
            <input id="title" class="span7" name="post[title]" value="<%= @post.title %>">
    
            <%= form_template_for(@post) %>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn" href="/admin/posts">Cancel</a>
            </div>
        </div>
        
        <div id="secondary" class="span4 offset1">
            <div class="well">
                <p>Secondary content</p>    
            </div>
        </div>

    </form>    
</div>
